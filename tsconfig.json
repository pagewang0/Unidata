{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "target": "esnext",
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "lib",
        "baseUrl": "."
    },
    "include": ["src/**/*", "types/*"]
}
